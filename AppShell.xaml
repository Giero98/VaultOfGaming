<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VaultOfGaming.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:VaultOfGaming.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}"
                      Icon="{OnPlatform 'home.png'}"/>

        <ShellContent ContentTemplate="{DataTemplate views:SearchPage}"
                      Icon="{OnPlatform 'search.png'}"/>

        <ShellContent ContentTemplate="{DataTemplate views:FavoritePage}"
                      Icon="{OnPlatform 'favorite.png'}"/>

        <ShellContent ContentTemplate="{DataTemplate views:MenuPage}"
                      Icon="{OnPlatform 'menu.png'}"/>
    </TabBar>

</Shell>
